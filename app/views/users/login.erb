<h1> Sign In </h1>
<% if flash.has_key?(:message) %>
    <div class="alert alert-danger" role="alert">
        <%=flash[:message]%>
    </div>
<% end %>

<form action="/login" method="POST">
    <div class="form-group">
        <label for="name"> Name: </label>
        <input type="text" class="form-control" name="user[name]" id="name" placeholder="Enter your full name">
    </div>   

    
    <div class="form-group">
        <label for="password"> Password </label>
        <input type="password" class="form-control" name="user[password]" id="password" placeholder="Enter your password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>